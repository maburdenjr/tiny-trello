<div id="{{list.id}}" class="col-xs-12 col-sm-6 col-md-3">
    <div class="list-container">
        <h3>{{fa-icon "thumb-tack"}} {{list.title}}</h3>
        <div class="list-tasks">

        </div>
        <div class="list-add">
            {{#if showAddItemForm}}
            <form class="form-inline">
                <input type="text" class="form-control" placeholder="Title">
                <a {{action 'cancelAdd'}} class="btn btn-default">Cancel</a>
                <a {{action 'saveItem'}} class="btn btn-primary">Save</a>
            </form>
            {{else}}
              <a {{action 'addItem'}} class="btn btn-primary">Add Task</a>
            {{/if}}
        </div>
     </div>
</div>
{{yield}}
